<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="suggestionPost"
            type="com.example.bookapp.models.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suggestion_post_title"
            style="@style/important_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{suggestionPost.postTitle}"
            app:layout_constraintBottom_toBottomOf="@+id/suggestion_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/suggestion_image"
            app:layout_constraintTop_toTopOf="@+id/suggestion_image"
            app:layout_constraintVertical_bias="0.0"
            tools:text="How to happily die" />

        <TextView
            android:id="@+id/suggestion_post_author"
            style="@style/important_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{suggestionPost.postAuthor}"
            app:layout_constraintEnd_toEndOf="@+id/suggestion_post_title"
            app:layout_constraintStart_toStartOf="@+id/suggestion_post_title"
            app:layout_constraintTop_toBottomOf="@+id/suggestion_post_title"
            tools:text="Andrei Avram" />

        <ImageView
            android:id="@+id/suggestion_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>