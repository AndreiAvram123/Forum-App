<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main_activity"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bookapp.fragments.HomeFragment"
        android:label="layout_home_fragment"
        tools:layout="@layout/layout_home_fragment" >

        <action
            android:id="@+id/action_homeFragment_to_expandedItemFragment"
            app:destination="@+id/expandedItemFragment"
            app:enterAnim="@anim/fragment_open_enter" />
        <argument
            android:name="latestPosts"
            app:argType="com.example.bookapp.models.Post[]" />
        <action
            android:id="@+id/action_homeFragment_to_fragmentAddPost"
            app:destination="@id/fragmentAddPost" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/expandedItemFragment"
        android:name="com.example.bookapp.fragments.ExpandedItemFragment"
        android:label="fragment_expanded_item"
        tools:layout="@layout/fragment_expanded_item" />
    <fragment
        android:id="@+id/favoriteItems"
        android:name="com.example.bookapp.fragments.FavoritePostsFragment"
        android:label="layout_fragment_posts_data"
        tools:layout="@layout/layout_fragment_posts_data" >
        <action
            android:id="@+id/action_favoriteItems_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_favoriteItems_to_fragmentMyPosts"
            app:destination="@id/fragmentMyPosts" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAddPost"
        android:name="com.example.bookapp.fragments.FragmentAddPost"
        android:label="layout_fragment_add_post"
        tools:layout="@layout/layout_fragment_add_post" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.bookapp.fragments.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_favoriteItems"
            app:destination="@id/favoriteItems" />
    </fragment>
    <action android:id="@+id/action_global_searchFragment" app:destination="@id/searchFragment" />
    <fragment
        android:id="@+id/fragmentMyPosts"
        android:name="com.example.bookapp.fragments.FragmentMyPosts"
        android:label="FragmentMyPosts" >
        <action
            android:id="@+id/action_fragmentMyPosts_to_friendsFragment"
            app:destination="@id/friendsFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.bookapp.fragments.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" >
        <action
            android:id="@+id/action_friendsFragment_to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.bookapp.fragments.MessagesFragment"
        android:label="MessagesFragment" >
        <argument
            android:name="currentUserID"
            app:argType="string" />
        <argument
            android:name="user2ID"
            app:argType="string" />
    </fragment>
</navigation>